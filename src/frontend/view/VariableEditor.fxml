<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.text.Font?>

<fx:root cache="true" prefWidth="320.0" type="AnchorPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" cache="true" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox styleClass="box" stylesheets="@css/DarkMode.css">
               <children>
                  <TextField fx:id="nameField" minHeight="30.0" prefHeight="30.0" prefWidth="280.0" promptText="Add name here..." styleClass="highlight" stylesheets="@css/DarkMode.css">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </TextField>
                  <HBox minHeight="30.0" prefHeight="30.0" prefWidth="300.0">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <children>
                        <ComboBox fx:id="accessComboBox" prefHeight="30.0" prefWidth="120.0" styleClass="highlight" stylesheets="@DarkMode.css">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </ComboBox>
                        <TextField fx:id="typeField" prefHeight="30.0" prefWidth="200.0" promptText="Add variable type here..." styleClass="highlight" stylesheets="@css/DarkMode.css">
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox minHeight="30.0" prefHeight="30.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                     <children>
                        <Button minHeight="30.0" mnemonicParsing="false" onAction="#deleteVariable" prefHeight="30.0" prefWidth="120.0" styleClass="highlight-red" stylesheets="@DarkMode.css" text="Delete">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <tooltip>
                              <Tooltip text="Delete variable" />
                           </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#confirmVariable" prefHeight="30.0" prefWidth="200.0" styleClass="highlight-green" stylesheets="@css/DarkMode.css" text="Confirm">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                           <tooltip>
                              <Tooltip text="Confirm new variable" />
                           </tooltip>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Polygon fill="#3e4046" points="-50.0, 52.0, -30.0, 63.0, -50.0, 75.0" stroke="TRANSPARENT" strokeType="INSIDE" />
         </children>
         <effect>
            <Blend opacity="0.0" />
         </effect>
      </HBox>
   </children>
   <effect>
      <Blend opacity="0.0" />
   </effect>
</fx:root>
